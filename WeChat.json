{
    "version":"2.6.7",
    "url":"https://dlglobal.qq.com/weixin/Windows/WeChat_C1018.exe",
    "installer": {
        "script": [
            "$file = Resolve-Path \"$dir\\$fname\"",
            "& \"$file\" /Silent",
            "    # Kill opened WeChat",
            "$done = $false",
            "do {",
            "    if (Get-Process Spotify -ErrorAction SilentlyContinue) {",
            "        Stop-Process -Name WeChat",
            "        $done = $true",
            "    }",
            "    Start-Sleep -Seconds 5",
            "} until ($done)"
        ]
    },
}